<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        https://www.springframework.org/schema/context/spring-context.xsd">
    <bean id="hello" class="com.soft1851.spring.orm.entity.Hello"/>
    <bean id="phone1" class="com.soft1851.spring.orm.entity.Phone" p:brand="iPhone11" p:price="6666"/>
    <bean id="phone2" class="com.soft1851.spring.orm.entity.Phone" p:brand="iPhoneXS Max" p:price="8666"/>
    <bean id="phone3" class="com.soft1851.spring.orm.entity.Phone" p:brand="iPhone11 Pro" p:price="9999"/>
    <bean id="phone4" class="com.soft1851.spring.orm.entity.Phone" p:brand="iPhoneXR" p:price="4000"/>
    <bean id="student" class="com.soft1851.spring.orm.entity.Student" p:id="1001" p:name="Tom">

        <property name="hobbies">
            <list>
                <value>打游戏</value>
                <value>运动</value>
                <value>编程</value>
            </list>
        </property>
        <property name="phones">
            <set>
                <ref bean="phone1" />
                <ref bean="phone2" />
            </set>
        </property>
        <property name="phoneMap">
            <map>
                <entry key="新手机" value-ref="phone3" />
                <entry key="备用机" value-ref="phone4"/>
            </map>
        </property>

    </bean>
</beans>